{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right"><a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  
  <div class="container-fluid">
    <div class="row">
     <div class="col-md-12">
      <div class="panel panel-default">
       <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-cart-arrow-down"></i> {{ text_order }}</h3>
       </div>
      </div>
     </div>
    </div>
    
    <div class="row">
      <div class="col-md-12">
      <div class="panel panel-default">
         <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-info-circle"></i>{{ text_book_modify_cancel }}</h3>
          </div>
          <div class="panel-body">
            <a href="{{ book_pickup }}" data-toggle="tooltip" title="{{ button_book_pickup_service }}" class="btn btn-primary"><i class="fa fa-truck"></i> {{ button_book_pickup_service }}</a> 
            <br />
            <br />
            <!--DHL Booking Request/Response !-->
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                  <thead>
                    <tr>        
                    <td class="text-left">{{ column_shipping_type }}</td>
                    <td class="text-left">{{ column_action_note }}</td>
                    <td class="text-left">{{ column_confirmation_number }}</td>
                    <td class="text-left">{{ column_pickup_date }}</td>
                    <td class="text-left">{{ column_ready_by_time }}</td>
                    <td class="text-left">{{ column_call_in_time }}</td>
                    <td class="text-left">{{ column_booking_cancelled }}</td>
                    <td class="text-right">{{ column_booking_action }}</td>
                  </tr>
                </thead>
                <tbody>
                {% if allbookings %}
                  {% for record in allbookings %}
                  <tr>
                     <td class="text-left">{{ record.shipping_type }}</td>
                     <td class="text-left">
                     {% if record.action_note %} 
                     {{ record.action_note }} 
                     {% else %}
                     {{ text_pending }}
                     {% endif %}</td>
                     <td class="text-left">
                     {% if record.confirmation_number %} 
                     {{ record.confirmation_number }} 
                     {% else %}
                     {{ text_pending }}
                     {% endif %}</td>
                     <td class="text-left">
                     {% if record.pickup_date %} 
                     {{ record.pickup_date }} 
                     {% else %}
                     {{ text_pending }}
                     {% endif %}</td>
                     <td class="text-left">
                     {% if record.ready_by_time %} 
                     {{ record.ready_by_time }} 
                     {% else %}
                     {{ text_pending }}
                     {% endif %}</td>
                     <td class="text-left">
                     {% if record.call_in_time %} 
                     {{ record.call_in_time }} 
                     {% else %}
                     {{ text_pending }}
                     {% endif %}</td>
                     <td class="text-left">
                     {% if record.cancelled_pickup == 1 %} 
                     {{ text_booking_yes }} 
                     {% else %}
                     {{ text_booking_no }}
                     {% endif %}</td>
                     <td class="text-right">
                     <a href="{{ record.modify_pickup }}" data-toggle="tooltip" title="{{ text_modify_pickup }}" class="btn btn-primary"><i class="fa fa-pencil"></i></a> 
                     <a href="{{ record.cancel_pickup }}" data-toggle="tooltip" title="{{ text_cancel_pickup }}" class="btn btn-danger"><i class="fa fa-times"></i></a> 
                     </td>
                  </tr>
                  {% endfor %}
                  {% else %}
                  <tr>
                    <td class="center" colspan="8">{{ text_no_results }}</td>
                  </tr>
                  {% endif %}
                  </tbody>
                </table>
              </div>
          </div>
       </div>
     </div>
    </div><!--end row!-->
  </div><!--end container fluid!-->
</div> <!--end content!-->
{{ footer }} 