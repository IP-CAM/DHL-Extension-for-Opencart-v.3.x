{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right"><a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  
  <div class="container-fluid">
    <div class="row">
     <div class="col-md-12">
      <div class="panel panel-default">
       <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-cart-arrow-down"></i> {{ text_order }}</h3>
       </div>
      </div>
     </div>
    </div>
    
    <div class="row">
      <div class="col-md-12">
      <div class="panel panel-default">
         <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-info-circle"></i>{{ text_book_pickup_header }}</h3>
          </div>
          <div class="panel-body">
          
            <!--DHL Booking Form !-->
            {{ dhl_xml }}
            <br />
            <br />
          {% if error_warning %}
            <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
              <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
            {% endif %}
           
            <form action="{{ action }}" method="post" enctype="multipart/form-data" id="dhlcancel_form" class="form-horizontal">
              <div class="form-group">
                <label class="col-sm-4 control-label" for="awb_number">{{ entry_awb_number }}</label>
                <div class="col-sm-4">
                   <input type="text" disabled="disabled" name="awb_number2" value="{{ awb_number }}" id="input-parent" class="form-control" />
              </div>
             </div>
             
             <div class="form-group">
                <label class="col-sm-4 control-label" for="requestor_contact_name2">{{ entry_requestor_contact_name }}</label>
                <div class="col-sm-4">
                   <input type="text" disabled="disabled" name="requestor_contact_name2" value="{{ requestor_contact_name }}" id="input-parent" class="form-control" />
               
              </div>
             </div>
             
             <div class="form-group">
                <label class="col-sm-4 control-label" for="cancel_reason">{{ entry_cancel_reason }}</label>
                <div class="col-sm-4">
                   <input type="text" name="cancel_reason" value="{{ cancel_reason }}" id="input-parent" class="form-control" />
                </div>
              </div>
              
              <div class="form-group">
                  <label class="col-sm-4 control-label" for="input-order-status"> </label>
                  <input type="hidden" name="awb_number" value="{{ awb_number }}" id="input-awb_number"/>
                  <input type="hidden" name="booking_confirmation_number" value="{{ booking_confirmation_number }}" id="input-booking_confirmation_number"/>
                  <input type="hidden" name="requestor_contact_name" value="{{ requestor_contact_name }}" id="requestor_contact_name"/>
                  <input type="hidden" name="pickup_date" value="{{ pickup_date }}" id="input_pickup_date"/>

                <div class="col-sm-4">
                  <input type="submit" name="submit" value="{{ button_cancel_pickup_service }}" class="btn btn-primary">
                </div>
              </div>
           </form>
          </div>
       </div>
     </div>
    </div><!--end row!-->
  </div><!--end container fluid!-->
</div> <!--end content!-->
{{ footer }} 